{
  "name": "@ropean/inline-assets",
  "version": "1.0.2",
  "description": "A zero-dependency utility to inline CSS, JavaScript, and SVG assets into HTML for single-file deployment. Works as a Vite plugin or standalone function with any build tool.",
  "keywords": [
    "@ropean",
    "inline-assets",
    "@ropean/inline-assets",
    "inline",
    "inline-css",
    "inline-js",
    "inline-svg",
    "html",
    "css",
    "javascript",
    "svg",
    "single-file",
    "vite",
    "vite-plugin",
    "webpack",
    "rollup",
    "esbuild",
    "build-tool",
    "zero-dependency",
    "bundler"
  ],
  "homepage": "https://inline-assets.ropean.org",
  "bugs": {
    "url": "https://github.com/ropean/inline-assets/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ropean/inline-assets.git"
  },
  "license": "MIT",
  "author": "ropean",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.js",
      "require": "./src/index.js"
    }
  },
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "workspaces": [
    "website"
  ],
  "scripts": {
    "build": "pnpm -C website build",
    "check": "node --check src/index.js && node --check src/logger.js && node --check src/inline.js && node --check src/vite-plugin.js",
    "dev": "pnpm -C website dev",
    "prepublishOnly": "npm run check",
    "preview": "pnpm -C website preview",
    "test": "node test/test-standalone.js"
  },
  "peerDependencies": {
    "vite": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=14.18.0"
  },
  "devDependencies": {
    "vite-plugin-mkcert": "^1.17.9"
  }
}
